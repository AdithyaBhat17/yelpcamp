<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 id="campground-header">Edit <%=campground.name%></h1>
        <div class="frm-edit">
        <form action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">NAME</label>
                <input class="form-control" type="text" name="campground[name]" id="name" value="<%=campground.name%>">
            </div>
            <div class="form-group">
                <label for="image">IMAGE</label>
                <input class="form-control" type="text" name="campground[image]" id="image" value="<%=campground.image%>">
            </div>
            <div class="form-group">
                <label for="price">PRICE</label>
                <input class="form-control" type="number" name="campground[price]" id="price" value="<%=campground.price%>" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="description">DESCRIPTION</label>
                <input class="form-control" type="text" name="campground[description]" id="description" value="<%=campground.description%>">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="submit"></input>
            </div>

        </form>
        <!--<a href="/campgrounds">go back</a>-->
        </div>
    </div>

</div>
<% include ../partials/footer %>
